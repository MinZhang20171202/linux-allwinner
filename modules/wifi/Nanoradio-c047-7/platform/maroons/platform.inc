export ARCH=arm
ifdef ANDROID_KERNEL_DIR
KERNEL_DIR = $(ANDROID_KERNEL_DIR)
else
KERNEL_DIR = $(HOME)/exported-android-2.6.29
endif

PLATFORM_FLAGS += -DKSDIO_IGNORE_REMOVE
PLATFORM_FLAGS += -DFIRMWARE_PADDING
PLATFORM_FLAGS += -DSHUTDOWN_ON_NOT_RUNNING

# Maroons uses external GPIO for SDIO IRQ.
# The following defines are used for this:
# OMAP_GPIO_WLAN_IRQ is pin 181 (WL_INT, ETK_D7) pin 21 + offset 160
# NRX600 GPIO0 PIN is pin 19
PLATFORM_FLAGS += -DKSDIO_GPIO_IRQ=181
PLATFORM_FLAGS += -DKSDIO_GPIO_PIN=19
PLATFORM_FLAGS += -DKSDIO_HOST_RESET_PIN=160

CROSS_COMPILE = arm-none-linux-gnueabi-
KERNEL_MAJOR_VERSION=2.6
TRANSPORT?=ksdio

